<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Previous LAC" />

            <TextView
                android:id="@+id/previous_lac"
                android:gravity="right"
                android:padding="3dip"
                android:text="-" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Previous CID" />

            <TextView
                android:id="@+id/previous_cid"
                android:gravity="right"
                android:padding="3dip"
                android:text="-" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Current LAC" />

            <TextView
                android:id="@+id/current_lac"
                android:gravity="right"
                android:padding="3dip"
                android:text="-" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Current CID" />

            <TextView
                android:id="@+id/current_cid"
                android:gravity="right"
                android:padding="3dip"
                android:text="-" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Time Since Last Switch" />

            <TextView
                android:id="@+id/time_change"
                android:gravity="right"
                android:padding="3dip"
                android:text="-" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Last Save" />

            <TextView
                android:id="@+id/last_record"
                android:gravity="right"
                android:padding="3dip"
                android:text="-" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip" >

        <Button
            android:id="@+id/button_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>